{% extends 'baseF.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom styles for the form */
        #basic-form-layouts {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }

        .card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            background: linear-gradient(90deg, #28a745, #218838);
            padding: 1.5rem;
            border-bottom: none;
            color: #fff;
        }

        .card-header h4 {
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            color: #333;
            font-weight: 600;
            margin-bottom: 0.5rem;
            transition: color 0.3s ease;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
            background: #fff;
            box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
        }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            transform: scale(1.02);
        }

        .form-control:disabled {
            background: #e9ecef;
            opacity: 0.8;
        }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
        }

        .form-section {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #333;
            font-weight: 600;
            margin: 1.5rem 0 1rem;
            animation: fadeIn 0.5s ease-in-out;
        }

        .form-errors {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .btn-primary {
            background: linear-gradient(90deg, #28a745, #218838);
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, #218838, #1e7e34);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.4);
        }

        .input-group-text {
            background: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 8px 0 0 8px;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .card-body {
                padding: 1.5rem;
            }
            .btn-primary, .btn-secondary {
                padding: 0.5rem 1.5rem;
                font-size: 0.9rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<section id="basic-form-layouts">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h4 class="card-title">
                            <i class="fas fa-hand-holding-usd"></i> Demander une avance
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                        <div class="form-group mb-3">
                            <label class="form-label fw-semibold">Salaire Net</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-wallet"></i></span>
                                <input type="text" class="form-control" value="{{ user.salaireNet }}" disabled>
                            </div>
                        </div>

                        <h4 class="form-section"><i class="fas fa-hand-holding-usd"></i> Avance</h4>

                        <div class="form-body mb-4">
                            <div class="form-group mb-3">
                                {{ form_label(form.montant, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-coins"></i></span>
                                    {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 500'}}) }}
                                </div>
                                {% if form_errors(form.montant) %}
                                    <div class="form-errors">{{ form_errors(form.montant) }}</div>
                                {% endif %}
                            </div>

                            <div class="form-group mb-3">
                                {{ form_label(form.raison, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-comment"></i></span>
                                    {{ form_widget(form.raison, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'DÃ©crivez la raison de votre demande...'}}) }}
                                </div>
                                {% if form_errors(form.raison) %}
                                    <div class="form-errors">{{ form_errors(form.raison) }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-actions d-flex justify-content-between">
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}