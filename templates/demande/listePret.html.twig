{% extends 'baseF.html.twig' %}

{% block body %}
    
    

        <div class="row">
            <h1 class="mb-4">Tout les prets</h1>
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="card">
                            
                            <div class="card-content">
                                <div class="card-body">
                                    
                                     {% if prets is empty %}
                                      <div class="alert alert-info mt-3">Aucun prêt trouvé.</div>
                                    {% else %}
                                        <table class="table table-striped table-bordered">
                                            <thead class="bg-primary text-white">              
                                                <tr>
                                                    <th>Employé</th>
                                                    <th>Montant</th>
                                                    <th>Raison</th>
                                                    <th>Date</th>
                                                    <th>Statut</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                    {% for pret in prets %}
                                        <tr>
                                            <td>{{ pret.user.nom }}</td>
                                            <td>{{ pret.montant }}</td>
                                            <td>{{ pret.raison }}</td>
                                            <td>{{ pret.dateDemande|date('d/m/Y') }}</td>
                                            <td>
                                                {% if pret.statut == 'Validé' %}
                                                    <span class="badge bg-success">{{ pret.statut }}</span>
                                                {% elseif pret.statut == 'En attente' %}
                                                    <span class="badge bg-warning text-dark">{{ pret.statut }}</span>
                                                {% elseif pret.statut == 'Rejeté' %}
                                                    <span class="badge bg-danger">{{ pret.statut }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ pret.statut }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if pret.statut == 'En attente' %}
                                                    <a href="{{ path('admin_pret_valider', {'id': pret.id}) }}" class="btn btn-success btn-sm">Valider</a>
                                                    <a href="{{ path('admin_pret_rejeter', {'id': pret.id}) }}" class="btn btn-danger btn-sm">Rejeter</a>
                                                {% endif %}
                                            </td>

                                        </tr>
                                    {% endfor %}
                                        </tbody>
                                        </table>
                                       <div class="navigation">
                                            {{ knp_pagination_render(prets) }}
                                        </div>


                                    {% endif %} 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            
     
{% endblock %}
