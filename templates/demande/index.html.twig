{% extends 'baseF.html.twig' %}

{% block body %}
    <h1 class="mb-4">Tout les attestaions</h1>

    {% if demandes is empty %}
        <div class="alert alert-info mt-3">Aucun attestation trouvé.</div>
    {% else %}
        <table class="table table-striped table-bordered">
            <thead class="bg-primary text-white">                <tr>
                   <th>Employé</th>
                    <th>Type de la demande</th>
                    <th>Statut</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for demande in demandes %}
                    <tr>
                         <td>{{ demande.user.nom }}</td>
                        <td>{{ demande.type }}</td>
                        <td>
                            
                            {% if demande.statut == 'Validée' %}
                                <span class="badge bg-success">{{ demande.statut }}</span>
                            {% elseif demande.statut == 'En attente' %}
                                <span class="badge bg-warning text-dark">{{ demande.statut }}</span>
                            {% elseif demande.statut == 'Rejetée' %}
                                <span class="badge bg-danger">{{ demande.statut }}</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ demande.statut }}</span>
                            {% endif %}
                        
                        </td>
                        
                        <td>{{ demande.dateSoumission|date('d/m/Y') }}</td>
                        <td>
                            {% if demande.statut == 'En attente' %}
                                <a href="{{ path('admin_demande_valider', {'idDem': demande.idDem}) }}" class="btn btn-success btn-sm">Valider</a>
                                <a href="{{ path('admin_demande_rejeter', {'idDem': demande.idDem}) }}" class="btn btn-danger btn-sm">Rejeter</a>
                            
                            {% endif %}
                          
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(demandes) }}
        </div>

    {% endif %}  
    

       
{% endblock %}
