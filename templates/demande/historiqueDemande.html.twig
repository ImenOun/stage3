{% extends 'baseF.html.twig' %}
{% block body %}
<h4>Historique des demandes</h4>
<table class="table table-bordered">
    <thead class="table-success">
        <tr>
            <th>Type de la demande</th>
            <th>Action</th>
            <th>Date</th>
            <th>Effectu√© par</th>
            <th>Commentaire</th>
        </tr>
    </thead>
    <tbody>
        {% for historique in historiques %}
    <tr>
        <td>{{ historique.demande.type }}</td>
        <td>{{ historique.action }}</td>
        <td>{{ historique.dateAction ? historique.dateAction|date('d/m/Y H:i') : '' }}</td>
        <td>{{ historique.user ? historique.user.nom : 'N/A' }}</td>
        <td>{{ historique.commentaire }}</td>
    </tr>
        {% else %}
            <tr><td colspan="4">Aucun historique.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
