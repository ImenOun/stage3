{% extends 'baseF.html.twig' %}

{% block body %}
    
            <div class="row">
            <h1 class="mb-4">Tout les avances</h1>
                    <div class="col-lg-12 col-md-12 col-12">
                        <div class="card">
                            
                            <div class="card-content">
                                <div class="card-body">
                                    
                                     {% if avances is empty %}
                                      <div class="alert alert-info mt-3">Aucune avance trouvé.</div>
                                    {% else %}
                                        <table class="table table-striped table-bordered">
                                            <thead class="bg-primary text-white">              
                                                <tr>
                                                    <th>Employé</th>
                                                    <th>Montant</th>
                                                    <th>Raison</th>
                                                    <th>Date</th>
                                                    <th>Statut</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                    {% for avance in avances %}
                                        <tr>
                                            <td>{{ avance.user.nom }}</td>
                                            <td>{{ avance.montant }}</td>
                                            <td>{{ avance.raison }}</td>
                                            <td>{{ avance.date_demande|date('d/m/Y') }}</td>
                                            <td>
                                                {% if avance.statut == 'Validée' %}
                                                    <span class="badge bg-success">{{ avance.statut }}</span>
                                                
                                                {% elseif avance.statut == 'En attente' %}
                                                    <span class="badge bg-warning text-dark">{{ avance.statut }}</span>
                                                {% elseif avance.statut == 'Rejeté' %}
                                                    <span class="badge bg-danger">{{ avance.statut }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ avance.statut }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if avance.statut == 'En attente' %}
                                                    <a href="{{ path('admin_avance_valider', {'id': avance.id}) }}" class="btn btn-success btn-sm">Valider</a>
                                                    <a href="{{ path('admin_avance_rejeter', {'id': avance.id}) }}" class="btn btn-danger btn-sm">Rejeter</a>
                                                {% endif %}
                                            </td>

                                        </tr>
                                    {% endfor %}
                                        </tbody>
                                        </table>
                                       <div class="navigation">
                                            {{ knp_pagination_render(avances) }}
                                        </div>


                                    {% endif %} 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
     
{% endblock %}
